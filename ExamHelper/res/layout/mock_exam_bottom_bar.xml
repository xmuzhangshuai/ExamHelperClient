<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/holo_blue"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/last_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_last_question"
        android:gravity="center"
        android:text="上一题"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hand_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_mock_finished"
        android:gravity="center"
        android:text="交卷"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/time_img"
        android:gravity="center"
        android:textColor="#FFD700"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_mock_preview"
        android:gravity="center"
        android:text="预览"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/next_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_next_question"
        android:gravity="center"
        android:text="下一题"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</LinearLayout>