<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppDarkTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="singal_choice_text_day">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8.0dip</item>
    </style>

    <style name="singal_choice_text_night">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/darktext</item>
        <item name="android:padding">8.0dip</item>
    </style>

    <style name="singal_choice_right">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ff00ff00</item>
        <item name="android:padding">8.0dip</item>
    </style>

    <style name="singal_choice_wrong">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffff0000</item>
        <item name="android:padding">8.0dip</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>